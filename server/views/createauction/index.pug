extends ../layout/index.pug

block content
  .innerbody
    .spacer
    .auction
      form(action='/createauction', enctype='multipart/form-data', method='post' id="createauctionform")
        .col-left
          .imgbox2
            .imgprev
              img#fill(src='#', alt='Please insert at least one image', onerror="this.src='images/AYN/image-missing.png'")
              img#fill2.smallimg(src='images/AYN/alt.jpg', alt='')
              img#fill3.smallimg(src='images/AYN/alt.jpg', alt='')
              img#fill4.smallimg(src='images/AYN/alt.jpg', alt='')
            .bot
                input#selectedFile(type='file', name='photo',style='display: none;',multiple=true, onchange='loadFile(event)',required=true)
                input.button(type='button', value='Image 1', onclick="document.getElementById('selectedFile').click();")
  
        .col-right
          select(form='createauctionform' name='shour')
            option(disable selected value) Start Hour
            - for(var i = 0; i < 24; i++) {
              if i<10
                option(value=`${i}`) 0#{i}
              else
                option(value=`${i}`) #{i}

            - }
          select(form='createauctionform' name='smins')
            option(disable selected value) Start Minutes
            - for(var i = 0; i < 60; i++) {
              if i<10
                option(value=`${i}`) 0#{i}
              else
                option(value=`${i}`) #{i}
            - }
          select(form='createauctionform' name='ehour')
            option(disable selected value) End Hour
            - for(var i = 0; i < 24; i++) {
              if i<10
                option(value=`${i}`) 0#{i}
              else
                option(value=`${i}`) #{i}

            - }
          select(form='createauctionform' name='emins')
            option(disable selected value) End Minutes
            - for(var i = 0; i < 60; i++) {
              if i<10
                option(value=`${i}`) 0#{i}
              else
                option(value=`${i}`) #{i}
            - }

          input(type="date")
          input(type="time")
          input(type="search")
          input(type='datetime-local')


          //.dates-wrapper.group
            .field.clearfix.date-range-start.date-wrapper
              .label
                label(for='datepicker-start') Start:
              .input
                input#datepicker-start.input-text(type='date', name='started', placeholder='dd/mm/yyyy')
            .field.clearfix.date-range-start.date-wrapper
              .label
                label(for='datepicker-end') End:
              .input
                input#datepicker-end.input-text(type='date', name='ends', placeholder='dd/mm/yyyy')
          br
          input.next(type='text', placeholder='Name',name="name",required=true,onsubmit='return false')
          select(form="createauctionform" name='category')
            option(disable selected value required=true) Category
            each cat in categories
              option(value=`${cat.name}`) #{cat.name}

          input.next(type="text",placeholder="Buy Price",name="buy_price",required=true)
          input.next(type="text",placeholder="Starting Bid",name="starting_bid",required=true)
          br
          input.next(type="text",placeholder="Location",name="location",required=true)   
          input.next(type="text",placeholder="Country",name="country",required=true)  
          br
          .descbox
            label
              textarea(type='text', name='description', placeholder='product_descr', maxlength='250', rows='8')
        input(type="submit",value="Submit")
          

            
  .footer
    span
      a.a1(href='#') SITEMAP
    span
      a.a1(href='#') TERMS OF SERVICE
    span
      a.a1(href='#') OUR TEAM
    br
    span
