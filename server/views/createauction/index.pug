          input.next(type="text",placeholder="Time",name="time",required=true)  
          input.next(type="text",placeholder="Amount",name="amount",required=true)  
          input.next(type="text",placeholder="Location",name="location",required=true)   
          input.next(type="text",placeholder="Country",name="country",required=true)  
          input.next(type="text",placeholder="Started",name="started",required=true)  
          input.next(type="text",placeholder="Ends",name="ends",required=true)  
          input.next(type="text",placeholder="Seller",name="seller",required=true) 
          .descbox
