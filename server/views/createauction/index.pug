extends ../layout/index

block content
  .innerbody
    .spacer
    .auction
      form(action='/createauction', enctype='multipart/form-data', method='post')
        .col-left
          .imgbox2
            .imgprev
              img#fill(src='#', alt='Please insert at least one image', onerror="this.src='images/AYN/image-missing.png'")
