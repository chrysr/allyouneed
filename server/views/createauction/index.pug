extends ../layout/index.pug

block content
  .innerbody
    .spacer
    .auction
      form(action='/createauction', enctype='multipart/form-data', method='post' id="createauctionform")
        .col-left
          .imgbox2
            .imgprev
              img#fill(src='#', alt='Please insert at least one image', onerror="this.src='images/AYN/image-missing.png'")
              img#fill2.smallimg(src='images/AYN/alt.jpg', alt='')
              img#fill3.smallimg(src='images/AYN/alt.jpg', alt='')
              img#fill4.smallimg(src='images/AYN/alt.jpg', alt='')
            .bot
                input#selectedFile(type='file', name='photo',style='display: none;',multiple=true, onchange='loadFile(event)',required=true)
                input.button(type='button', value='Image 1', onclick="document.getElementById('selectedFile').click();")
  
          input(type='datetime-local', name='start_date', required=true) 
          input(type='datetime-local', name='end_date', required=true) 
        
          br
          input.next(type='text', placeholder='Name',name="name",required=true,onsubmit='return false')
          select(form="createauctionform" name='category', required=true, multiple) 
            option(disable selected value) Category
            each cat in categories
              option(value=`${cat.name}`) #{cat.name}

          input.next(type="number",placeholder="Buy Price",name="buy_price",required=true step="0.01")
          input.next(type="number",placeholder="Starting Bid",name="starting_bid",required=true step="0.01")
          br
          input.next(type="text",placeholder="Location",name="location",required=true)   
          input.next(type="text",placeholder="Country",name="country",required=true)  
          br
          .descbox
            label
              textarea(type='text', name='description', placeholder='product_descr', maxlength='250', rows='8')
        input(type="submit",value="Submit")
          

            
  .footer
    span
      a.a1(href='#') SITEMAP
    span
      a.a1(href='#') TERMS OF SERVICE
    span
      a.a1(href='#') OUR TEAM
    br
